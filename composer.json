{
    "name": "typhonius/acquia-logstream",
    "description": "PHP library to connect to Acquia Logstream service",
    "authors": [
        {
            "name": "Adam Malone",
            "email": "adam@adammalone.net"
        }
    ],
    "license": "MIT",
    "require": {
        "typhonius/acquia-php-sdk-v2": "^2.0.0",
        "ratchet/pawl": "^0.3",
        "symfony/console": "^4 || ^5",
        "php": ">=7.1",
        "consolidation/self-update": "^1.1",
        "symfony/yaml": "^4|^5"
    },
    "autoload":{
        "psr-4":{
            "AcquiaLogstream\\":"src"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.1",
        "phpstan/phpstan": "^0.12.0",
        "phpunit/phpunit": "^7.0",
        "php-coveralls/php-coveralls": "^2.0.0"
    },
    "scripts": {
        "phar:install-tools": [
            "mkdir -p tools",
            "curl -L https://github.com/humbug/box/releases/download/3.8.4/box.phar -o tools/box",
            "chmod +x tools/box"
        ],
        "phar:build": "env PATH=tools:$PATH box compile",
        "lint": [
            "find src -name '*.php' -print0 | xargs -0 -n1 php -l",
            "find tests -name '*.php' -print0 | xargs -0 -n1 php -l"
        ],
        "cs": "phpcs -s --standard=PSR12 ./src/ ./tests/",
        "unit": "phpunit --coverage-clover ./tests/logs/clover.xml",
        "stan": "phpstan analyse --level 5 src",
        "test": [
            "@lint",
            "@unit",
            "@cs",
            "@stan"
        ],
        "coveralls": "php-coveralls -v",
        "release": [
            "release VERSION"
        ]
    }
}
